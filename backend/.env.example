# Environment
NODE_ENV=development

# Server
PORT=3001

# Database
DATABASE_URL=postgresql://hrms_user:hrms_password@localhost:5432/hrms_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# AI Provider Configuration
# Options: gemini, huggingface, openai
AI_PROVIDER=gemini

# Google Gemini API (Free tier available at https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# HuggingFace API (Free tier available at https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HF_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# OpenAI API (Paid - requires credits)
OPENAI_API_KEY=your_openai_api_key_here

# Storage
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads

# S3 Storage (optional)
S3_BUCKET=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# CORS
CORS_ORIGIN=http://localhost:5173

